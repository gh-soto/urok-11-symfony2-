{% extends '::base.html.twig' %}

{% block body -%}
<div class="page">
	<h1>Article creation</h1>

	<div class="container container2">
		{# {{ form(form) }} #}

		{{ form_start(form, {'attr': {'role': 'form'}}) }}
		{{ form_errors(form) }}
		<div class="form-group">
			{{ form_label(form.title, 'Title') }}
			{{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}

			{{ form_label(form.short_content, 'Short description') }}
			{{ form_widget(form.short_content, {'attr': {'class': 'form-control'}}) }}

			{{ form_label(form.content, 'Content') }}
			{{ form_widget(form.content, {'attr': {'class': 'form-control full-desc'}}) }}
			
			{# {{ form_widget(form.submit, {'attr': {'class': 'btn btn-info'}}) }} #}
			{{ form_rest(form) }}
		</div>
	</div>

	<ul class="record_actions list-unstyled">
		<li>
			<a href="{{ path('art_list') }}">
				Back to the list
			</a>
		</li>
	</ul>
</div>
{% endblock %}
